<%- include("partials/header2.ejs") %>
    <br><br><br>
    <div class="flex-container-cn">
      <p>Random Cocktail</p><hr class="i5"><hr class="i5"><br><br>
    </div>
<% if(locals.cocktails){ %>
    <div class="container">
      <div class="row f0">
          
          <% for(var loop=0;loop<Length;loop++){ %>
              <div class="col-9 col-md-5 f2">
              <div>
                  <%  var i =  cocktails[loop].strDrinkThumb  +"/preview" %>
                  <img src=<%= i %> class="f3" alt="" srcset="">
              </div>
              <div><h1 class="f4"><%= cocktails[loop].strDrink %></h1></div>
              <div><h2 class="f5">Ingredients: </h2></div>
              <ul class="f6">
              <div class="row">   
                  <div class="col-12 col-md-6">
                      <%  if(cocktails[loop].strIngredient1 !=null){ %>
                          <li><%= cocktails[loop].strIngredient1 %>
                          <%  } if(cocktails[loop].strMeasure1!=null){ %>
                          : <%= cocktails[loop].strMeasure1 %></li>
                          <% } %> 
                  </div>
                  <div class="col-12 col-md-6">
                      <%  if(cocktails[loop].strIngredient2 !=null){ %>
                          <li><%= cocktails[loop].strIngredient2 %>
                          <%  } if(cocktails[loop].strMeasure2!=null){ %>
                          : <%= cocktails[loop].strMeasure2 %></li>
                          <% } %> 
                  </div>
              </div>
              <div class="row">
                  <div class="col-12 col-md-6">
                      <%  if(cocktails[loop].strIngredient3 !=null){ %>
                          <li><%= cocktails[loop].strIngredient3 %>
                          <%  } if(cocktails[loop].strMeasure3!=null){ %>
                          : <%= cocktails[loop].strMeasure3 %></li>
                          <% } %> 
                  </div>
                  <div class="col-12 col-md-6">
                      <%  if(cocktails[loop].strIngredient4 !=null){ %>
                          <li><%= cocktails[loop].strIngredient4 %>
                          <%  } if(cocktails[loop].strMeasure4!=null){ %>
                          : <%= cocktails[loop].strMeasure4 %></li>
                          <% } %> 
                  </div>
              </div>
              <div class="row">
                  <div class="col-12 col-md-6">
                      <%  if(cocktails[loop].strIngredient5 !=null){ %>
                          <li><%= cocktails[loop].strIngredient5 %>
                          <%  } if(cocktails[loop].strMeasure5!=null){ %>
                          : <%= cocktails[loop].strMeasure5 %></li>
                          <% } %> 
                  </div>
                  <div class="col-12 col-md-6">
                      <%  if(cocktails[loop].strIngredient6 !=null){ %>
                          <li><%= cocktails[loop].strIngredient6 %>
                          <%  } if(cocktails[loop].strMeasure6!=null){ %>
                          : <%= cocktails[loop].strMeasure6 %></li>
                          <% } %> 
  
                  </div>
              </div>
              </ul>
              <div><h2 class="f5">Description : </h2></div>
              <div><p class="f7"><%= cocktails[loop].strInstructions %></p></div>
          </div>
      </div>
  
  </div>
  <% } %>


    <%  } else { %>
                    <br><br>
                    <div class="flex-container-cn">
                        <p>TRY AGAIN ! ERROR : <%= error %></p><br><br>
                    </div>

    <% } %>
      


<br><br><br><br>
