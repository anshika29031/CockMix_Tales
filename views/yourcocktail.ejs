<%- include("partials/header2.ejs") %>

<br><br><br><br>

<div class="flex-container-cn">
    <p>Search By Ingredient Name of a Cocktail</p>
    <form action="/ingredient_name_result" method="post">
        <input type="text" name="cocktailrequested" placeholder="Ingredient Name" class="takinginput" required><br>
        <button type="submit" value="CocktailNameSearch" name="choice" class="custombutton">SEARCH</button><br>
    </form>
 </div>
<br><br>

<% if(locals.cocktails){ %>
<div class="row f0">
    <div class="col-9 col-md-5 f2">
    <div>
        <%  var i =  cocktails[0].strDrinkThumb  +"/preview" %>
        <img src=<%= i %> class="f3" alt="" srcset="">
    </div>
    <div><h1 class="f4"><%= cocktails[0].strDrink %></h1></div>
    <div><h2 class="f5">Ingredients: </h2></div>
    <ul class="f6">
    <div class="row">   
        <div class="col-12 col-md-6">
            <%  if(cocktails[0].strIngredient1 !=null){ %>
                <li><%= cocktails[0].strIngredient1 %>
                <%  } if(cocktails[0].strMeasure1!=null){ %>
                : <%= cocktails[0].strMeasure1 %></li>
                <% } %> 
        </div>
        <div class="col-12 col-md-6">
            <%  if(cocktails[0].strIngredient2 !=null){ %>
                <li><%= cocktails[0].strIngredient2 %>
                <%  } if(cocktails[0].strMeasure2!=null){ %>
                : <%= cocktails[0].strMeasure2 %></li>
                <% } %> 
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6">
            <%  if(cocktails[0].strIngredient3 !=null){ %>
                <li><%= cocktails[0].strIngredient3 %>
                <%  } if(cocktails[0].strMeasure3!=null){ %>
                : <%= cocktails[0].strMeasure3 %></li>
                <% } %> 
        </div>
        <div class="col-12 col-md-6">
            <%  if(cocktails[0].strIngredient4 !=null){ %>
                <li><%= cocktails[0].strIngredient4 %>
                <%  } if(cocktails[0].strMeasure4!=null){ %>
                : <%= cocktails[0].strMeasure4 %></li>
                <% } %> 
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6">
            <%  if(cocktails[0].strIngredient5 !=null){ %>
                <li><%= cocktails[0].strIngredient5 %>
                <%  } if(cocktails[0].strMeasure5!=null){ %>
                : <%= cocktails[0].strMeasure5 %></li>
                <% } %> 
        </div>
        <div class="col-12 col-md-6">
            <%  if(cocktails[0].strIngredient6 !=null){ %>
                <li><%= cocktails[0].strIngredient6 %>
                <%  } if(cocktails[0].strMeasure6!=null){ %>
                : <%= cocktails[0].strMeasure6 %></li>
                <% } %> 

        </div>
    </div>
    </ul>
    <div><h2 class="f5">Description : </h2></div>
    <div><p class="f7"><%= cocktails[0].strInstructions %></p></div>
</div>
</div>

<%  } else { %>
    <br><br>
    <div class="flex-container-cn">
        <p>TRY AGAIN ! </p><br><br>
    </div>

<% } %>

<br><br><br><br>
